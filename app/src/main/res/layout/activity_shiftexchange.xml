                    android:layout_height="wrap_content"
                    tools:text="08:00 - 16:00"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiftexhange_to_offer"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/shiftexchange_pending_shifts_to_offer"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/shiftexchange_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="the message for whoever is reading"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom">

            <Button
                android:id="@+id/shiftexchange_pending_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiftexchange_offer"
                android:layout_marginVertical="18dp"
                android:layout_marginHorizontal="24dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shiftexchange_confirmable"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
