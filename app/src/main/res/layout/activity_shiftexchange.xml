<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shiftexchange_upforgrabs"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShiftExchangeActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:minHeight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:text="@string/shiftexchange_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/shiftexchange_upforgrabs_shift_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Waiter"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiftexchange_get_rid_off"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/black_white_border"
                android:padding="4dp">

                <TextView
                    android:id="@+id/shiftexchange_upforgrabs_shift_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01.01.2021"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/shiftexchange_upforgrabs_shift_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="08:00 - 16:00"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiftexhange_to_offer"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/shiftexchange_upforgrabs_shifts_to_offer"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/shiftexchange_upforgrabs_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="the message for whoever is reading"
                android:textSize="18dp"
                android:layout_marginTop="18dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom">

            <Button
                android:id="@+id/shiftexchange_upforgrabs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiftexchange_offer"
                android:layout_marginVertical="18dp"
                android:layout_marginHorizontal="24dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shiftexchange_pending"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShiftExchangeActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
